<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipselabs</groupId>
	<artifactId>emfjson</artifactId>
	<packaging>pom</packaging>
	<version>${version}</version>

	<modules>
		<module>bundles/org.eclipselabs.emfjson</module>
		<module>features/org.eclipselabs.emfjson.feature</module>

		<module>bundles/org.eclipselabs.emfjson.ui</module>

		<module>apis/rotten/org.eclipselabs.emfjson.rotten</module>
		<module>features/org.eclipselabs.emfjson.rotten.feature</module>

		<module>apis/twitter/org.eclipselabs.emfjson.twitter</module>
		<module>features/org.eclipselabs.emfjson.twitter.feature</module>

		<module>apis/youtube/org.eclipselabs.emfjson.youtube</module>
		<module>features/org.eclipselabs.emfjson.youtube.feature</module>

		<module>couchdb/org.eclipselabs.emfjson.couchdb</module>
		<module>features/org.eclipselabs.emfjson.couchdb.feature</module>

		<module>bundles/org.eclipselabs.emfjson.modelgen</module>
		<module>features/org.eclipselabs.emfjson.modelgen.feature</module>

		<module>bundles/org.eclipselabs.emfjson.gwt</module>
		<module>features/org.eclipselabs.emfjson.gwt.feature</module>

		<module>tests/org.eclipselabs.emfjson.junit</module>

		<module>build/repository</module>
	</modules>

	<properties>
		<tycho-version>0.13.0</tycho-version>
		<targets>build/repository/target/</targets>
		<build-type>snapshots</build-type>
		<version>0.4.0-SNAPSHOT</version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>emf-xsd-sdk</groupId>
			<artifactId>emf-xsd-sdk</artifactId>
			<version>2.7.1</version>
		</dependency>
		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<version>2.4.0</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-mapper-asl</artifactId>
			<version>1.9.5</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>clojars.org</id>
			<url>http://clojars.org/repo</url>
		</repository>
		<repository>
			<id>codehaus-snapshots</id>
			<url>http://snapshots.repository.codehaus.org</url>
		</repository>
		<repository>
			<id>indigo</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/indigo</url>
		</repository>
		<repository>
			<id>gwt</id>
			<layout>p2</layout>
<!-- 			<url>http://ghillairet.github.com/emfjson/gwt</url> -->
<!-- 			<url>http://download.eclipse.org/tools/orbit/downloads/drops/I20120223001551/repository</url> -->
			<url>file:/Users/guillaume/Projects/emfjson/build/dependencies/com.google.gwt.repository/</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<resolver>p2</resolver>
					<pomDependencies>consider</pomDependencies>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<argLine>-Xmx512M</argLine>
					<includes>
						<include>**/junit/suite/TestSuite.java</include>
					</includes>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<includeAllDependencies>false</includeAllDependencies>
					<createArtifactRepository>true</createArtifactRepository>
					<compress>true</compress>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-publisher-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<publishArtifacts>true</publishArtifacts>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-source-plugin</artifactId>
				<version>${tycho-version}</version>
				<executions>
					<execution>
						<id>plugin-source</id>
						<goals>
							<goal>plugin-source</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
