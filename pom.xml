<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipselabs</groupId>
	<artifactId>emfjson</artifactId>
	<version>0.3.3-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<modules>
		<module>bundles/org.eclipselabs.emfjson</module>
		<module>features/org.eclipselabs.emfjson.feature</module>
		
		<module>bundles/org.eclipselabs.emfjson.ui</module>
		
		<module>apis/rotten/org.eclipselabs.emfjson.rotten</module>
		<module>features/org.eclipselabs.emfjson.rotten.feature</module>
		
		<module>apis/twitter/org.eclipselabs.emfjson.twitter</module>
		<module>features/org.eclipselabs.emfjson.twitter.feature</module>
		
		<module>apis/youtube/org.eclipselabs.emfjson.youtube</module>
		<module>features/org.eclipselabs.emfjson.youtube.feature</module>
		
		<module>tests/org.eclipselabs.emfjson.junit</module>
		<!-- <module>tests/org.eclipselabs.emfjson.twitter.junit</module> 
			<module>tests/org.eclipselabs.emfjson.youtube.junit</module> -->
		<!-- <module>couchdb/org.eclipselabs.emfjson.couchdb</module> -->
		<module>build/repository</module>
	</modules>

	<properties>
		<tycho-version>0.13.0</tycho-version>
		<targets>build/repository/target/</targets>
		<build-type>snapshots</build-type>
	</properties>

	<repositories>
		<repository>
			<id>indigo</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/indigo</url>
		</repository>
		<repository>
			<id>juno</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/juno</url>
		</repository>
		<repository>
			<id>emfjson-snapshots</id>
			<layout>p2</layout>
			<url>http://ghillairet.github.com/emfjson/releases/</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<argLine>-Xmx512M</argLine>
					<includes>
						<include>**/junit/suite/TestSuite.java</include>
					</includes>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<includeAllDependencies>false</includeAllDependencies>
					<createArtifactRepository>true</createArtifactRepository>
					<compress>true</compress>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-publisher-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<publishArtifacts>true</publishArtifacts>
				</configuration>
			</plugin>

		</plugins>
	</build>
	
</project>
